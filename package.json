{
  "name": "voice-ai-platform",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "apps/*"
  ],
  "scripts": {
    "dev:api": "npm run dev --workspace=apps/api",
    "dev:dashboard": "npm run dev --workspace=apps/dashboard",
    "dev": "concurrently \"npm run dev:api\" \"npm run dev:dashboard\"",
    "build": "npm run build --workspaces",
    "db:migrate": "npm run migrate --workspace=apps/api",
    "db:seed": "npm run seed --workspace=apps/api"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "typescript": "^5.3.3"
  }
}
