# Kubernetes Secrets Template
# Copy this file to secrets.yaml and fill in your values
# DO NOT commit secrets.yaml to version control

apiVersion: v1
kind: Namespace
metadata:
  name: voice-ai
---
apiVersion: v1
kind: Secret
metadata:
  name: voice-ai-secrets
  namespace: voice-ai
type: Opaque
stringData:
  # Database
  database-url: "postgresql://user:password@postgres-service:5432/voice_ai"

  # Redis
  redis-url: "redis://redis-service:6379"

  # API Keys
  openai-api-key: "sk-..."
  deepgram-api-key: "..."
  elevenlabs-api-key: "..."

  # Twilio (optional)
  twilio-account-sid: "AC..."
  twilio-auth-token: "..."

  # JWT & API Keys
  jwt-secret: "your-super-secret-jwt-key-change-me-in-production"
  api-key-secret: "your-super-secret-api-key-change-me-in-production"

---
# How to create secrets using kubectl:
#
# kubectl create secret generic voice-ai-secrets \
#   --from-literal=database-url="postgresql://..." \
#   --from-literal=redis-url="redis://..." \
#   --from-literal=openai-api-key="sk-..." \
#   --from-literal=deepgram-api-key="..." \
#   --from-literal=jwt-secret="..." \
#   --from-literal=api-key-secret="..." \
#   -n voice-ai
#
# Or use external secret managers:
# - AWS Secrets Manager (with External Secrets Operator)
# - Google Secret Manager
# - Azure Key Vault
# - HashiCorp Vault
